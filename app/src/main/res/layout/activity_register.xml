<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_back"
            android:onClick="onClicked"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ic_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:fontFamily="@font/roboto_medium"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="35sp"
                android:text="Register"
                />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="32dp"
                android:src="@drawable/circle"
                android:layout_marginLeft="160dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="297dp"
            android:baselineAligned="false"
            android:fontFamily="@font/roboto_regular"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="9sp"
            android:text="Email"
            android:textColor="@color/deep_grey"
            android:textSize="12sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/Edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/roboto_light"
            android:hint="Please enter your email."
            android:letterSpacing="0.03"
            android:lineSpacingExtra="11sp"
            android:textColor="@color/soft_grey"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_regular"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="9sp"
            android:textColor="@color/deep_grey"
            android:textSize="12sp"
            android:textStyle="normal"
            android:text="Password"/>


        <EditText
            android:id="@+id/Edittext_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_light"
            android:hint="Please enter your password."
            android:letterSpacing="0.03"
            android:lineSpacingExtra="11sp"
            android:textColor="@color/soft_grey"
            android:textSize="14sp"
            android:textStyle="normal" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/roboto_regular"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="9sp"
            android:textColor="@color/deep_grey"
            android:textSize="12sp"
            android:textStyle="normal"
            android:text="Name"/>

        <EditText
            android:id="@+id/Edittext_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_light"
            android:hint="Please enter a name to use."
            android:letterSpacing="0.03"
            android:lineSpacingExtra="11sp"
            android:textColor="@color/soft_grey"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/roboto_regular"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="9sp"
            android:textColor="@color/deep_grey"
            android:textSize="12sp"
            android:textStyle="normal"
            android:text="Sex"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_female"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/border_24r_blue"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="normal"
                android:textColor="@color/blue"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="11sp"
                android:text="Female"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/btn_male"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/border_24r_blue"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="normal"
                android:textColor="@color/blue"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="11sp"
                android:text="Male"
                android:layout_weight="1" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="32dp"
            android:fontFamily="@font/roboto_regular"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="9sp"
            android:textColor="@color/deep_grey"
            android:textSize="12sp"
            android:textStyle="normal"
            android:text="Age"/>

        <EditText
            android:id="@+id/Edittext_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/roboto_light"
            android:hint="Please select your year of birth."
            android:letterSpacing="0.03"
            android:lineSpacingExtra="11sp"
            android:textColor="@color/deep_grey"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/roboto_regular"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="9sp"
            android:textColor="@color/deep_grey"
            android:textSize="12sp"
            android:textStyle="normal"
            android:text="Country"/>

        <EditText
            android:id="@+id/Edittext_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/roboto_light"
            android:hint="Please select your country."
            android:letterSpacing="0.03"
            android:lineSpacingExtra="11sp"
            android:textColor="@color/soft_grey"
            android:textSize="14sp"
            android:textStyle="normal" />


        <Button
            android:id="@+id/button_register"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="56dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/border_24r_blue"
            android:fontFamily="@font/roboto_medium"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="7sp"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:textStyle="normal"
            android:text="Register"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="93dp"
            android:layout_marginRight="93dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="9sp"
                android:textColor="#bdbdbd"
                android:textSize="12sp"
                android:textStyle="normal"
                android:text="Already have an account?"/>

            <Button
                android:id="@+id/btn_login"
                android:onClick="onButtonClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="normal"
                android:textColor="@color/blue"
                android:lineSpacingExtra="9sp"
                android:text="Sign In"
                />

        </LinearLayout>


    </LinearLayout>

</ScrollView>


