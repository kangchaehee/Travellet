<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ProgressBar
        android:id="@+id/login_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="32dp"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="100dp"
            android:textSize="28sp"
            app:fontFamily="@font/roboto_medium"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="35sp"
            android:text="Welcome back,"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            app:fontFamily="@font/roboto_light"
            android:textStyle="normal"
            android:textColor="@color/deep_grey"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="12sp"
            android:text="Sign in to continue"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="60dp"
            android:textSize="12sp"
            app:fontFamily="@font/roboto_regular"
            android:textStyle="normal"
            android:textColor="@color/deep_grey"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="9sp"
            android:text="Email"
            />



        <EditText
            android:id="@+id/Edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            app:fontFamily="@font/roboto_light"
            android:hint="Please enter your email."
            android:inputType="textEmailAddress"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="11sp"
            android:textColorHint="@color/soft_grey"
            android:textColor="@color/soft_black"
            android:textSize="14sp"
            android:textStyle="normal"
            android:background="@null"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:imeOptions="actionDone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/icon_grey"
            android:layout_below="@id/Edittext_email"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            app:fontFamily="@font/roboto_regular"
            android:textStyle="normal"
            android:textColor="@color/deep_grey"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="9sp"
            android:text="Password"
            />

        <EditText
            android:id="@+id/Edittext_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            app:fontFamily="@font/roboto_light"
            android:hint="Please enter your password."
            android:textColorHint="@color/soft_grey"
            android:letterSpacing="0.03"
            android:inputType="textPassword"
            android:lineSpacingExtra="11sp"
            android:textColor="@color/soft_black"
            android:textSize="14sp"
            android:textStyle="normal"
            android:background="@null"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:imeOptions="actionDone" />

        <View
            android:id="@+id/underbar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/icon_grey"
            android:layout_below="@id/Edittext_pw"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"/>



        <Button
            android:id="@+id/btn_signin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="164dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/button"
            app:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="7sp"
            android:textAllCaps="false"
            android:text="Sign In"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:textStyle="normal"
            android:stateListAnimator="@null"  />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:fontFamily="@font/roboto_regular"
                android:textStyle="normal"
                android:textColor="@color/soft_grey"
                android:lineSpacingExtra="9sp"
                android:text="Donâ€™t have an account?"
                />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonClick"
                android:background="@color/white"
                android:textSize="12sp"
                app:fontFamily="@font/roboto_regular"
                android:textStyle="normal"
                android:textColor="@color/blue"
                android:lineSpacingExtra="9sp"
                android:textAllCaps="false"
                android:layout_marginBottom="16dp"
                android:text=" Register now!"
                android:stateListAnimator="@null"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
