<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back"
        android:background="@drawable/ic_back"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="32dp"
        android:textSize="12sp"
        app:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:lineSpacingExtra="9sp"
        android:text="Place"
        />

    <EditText
        android:id="@+id/Edittext_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="32dp"
        android:textSize="12sp"
        app:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#000000"
        android:lineSpacingExtra="9sp"
        android:hint="Search the place."
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/ic_love_unpressed"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                app:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#424242"
                android:lineSpacingExtra="11sp"
                android:text="Sookmyung Women's University"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="10sp"
                app:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#616161"
                android:lineSpacingExtra="8sp"
                android:text="Seoul, chungpa-dong"
                />


        </LinearLayout>



    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bar"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/ic_love_unpressed"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                app:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#424242"
                android:lineSpacingExtra="11sp"
                tools:text="Sookmyung Women's University"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="10sp"
                app:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#616161"
                android:lineSpacingExtra="8sp"
                tools:text="Seoul, chungpa-dong"
                />


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bar"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/ic_love_unpressed"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                app:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#424242"
                android:lineSpacingExtra="11sp"
                tools:text="Sookmyung Women's University"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="10sp"
                app:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#616161"
                android:lineSpacingExtra="8sp"
                tools:text="Seoul, chungpa-dong"
                />


        </LinearLayout>



    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bar"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/ic_love_unpressed"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                app:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#424242"
                android:lineSpacingExtra="11sp"
                tools:text="Sookmyung Women's University"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="10sp"
                app:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#616161"
                android:lineSpacingExtra="8sp"
                tools:text="Seoul, chungpa-dong"
                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>