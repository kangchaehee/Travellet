<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TravelTitleSet"
    android:background="@color/white">

    <ImageButton
        android:layout_alignParentRight="true"
        android:layout_height="48dp"
        android:layout_width="48dp"
        android:id="@+id/btn_back"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:onClick="onButtonClick"
        android:background="@drawable/ic_x"
        android:stateListAnimator="@null"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/imageView6"
        android:layout_below="@+id/btn_back"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/roboto_medium"
                android:lineSpacingExtra="35sp"
                android:text="How Much"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_light"
                android:lineSpacingExtra="12sp"
                android:text="Is Your Budget?"
                android:textColor="@color/deep_grey"
                android:textSize="16sp"
                android:textStyle="normal" />
            <Button
                android:id="@+id/btn_frugal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:gravity="left|center_vertical"
                android:background="@drawable/border_12r_grey"
                android:drawableLeft="@drawable/ic_budeget_24px"
                android:paddingLeft="24dp"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="7sp"
                android:textColor="@color/soft_black"
                android:textSize="14sp"
                android:textStyle="normal"
                android:text="      Frugal\n      $ 800"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                />


            <Button
                android:id="@+id/btn_middle"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:background="@drawable/border_12r_grey"
                android:drawableLeft="@drawable/ic_budeget_24px"
                android:paddingLeft="24dp"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="7sp"
                android:textColor="@color/soft_black"
                android:textSize="14sp"
                android:textStyle="normal"
                android:gravity="left|center_vertical"
                android:textAllCaps="false"
                android:text="      Middle\n      $ 1,000 ~ $ 1,200"
                android:stateListAnimator="@null"/>


            <Button
                android:id="@+id/btn_luxurious"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:background="@drawable/border_12r_grey"
                android:drawableLeft="@drawable/ic_budeget_24px"
                android:paddingLeft="24dp"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="7sp"
                android:textColor="@color/soft_black"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_marginBottom="66dp"
                android:gravity="left|center_vertical"
                android:text="      Luxurious\n      $ 1,200"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                />


        </LinearLayout>

    </ScrollView>



    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_Next"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:background="@drawable/ic_progress_3"/>

    <Button
        android:id="@+id/btn_Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_background_full"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:lineSpacingExtra="7sp"
        android:onClick="onClick"
        android:stateListAnimator="@null"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/imageView6" />



</RelativeLayout>







