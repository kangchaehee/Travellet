<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#00000000"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/popup_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Select the transportation you want to use."
            android:textColor="@color/soft_black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="56dp"
                android:id="@+id/walk"
                android:background="@drawable/ic_walk"/>

            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="56dp"
                android:id="@+id/bus"
                android:background="@drawable/ic_bus"/>

            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="56dp"
                android:id="@+id/subway"
                android:background="@drawable/ic_subway"/>

            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="56dp"
                android:id="@+id/taxi"
                android:background="@drawable/ic_taxi"/>

            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="56dp"
                android:id="@+id/car"
                android:background="@drawable/ic_car"/>

        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/button_background_full"
            android:text="Ok"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:textAllCaps="false"/>

    </LinearLayout>


</RelativeLayout>