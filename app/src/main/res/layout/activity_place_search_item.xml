<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/icon_grey"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/placeListThumb"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/placeListThumb"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="37dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/placeListName"
            android:text="Lotte Hotel"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/placeListAddr"
            android:layout_marginTop="16dp"
            android:textColor="@color/deep_grey"
            android:textSize="14sp"
            android:text="30, Eulji-ro, Jung-gu, Seoul"
            android:fontFamily="@font/roboto_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/placeListType"
            android:layout_marginTop="8dp"
            android:text="Accommodation"
            android:textSize="12sp"
            android:textColor="@color/deep_grey"
            android:fontFamily="@font/roboto_light"/>
    </LinearLayout>

</RelativeLayout>