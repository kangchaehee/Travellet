<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/seoulImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/seoul1"
        android:elevation="5dp"/>

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/seoulImage"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:lineSpacingExtra="12sp"
                android:text="D-14"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_light"
                android:lineSpacingExtra="11sp"
                android:text="happy trip"
                android:textColor="@color/deep_grey"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_light"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="9sp"
                android:text="01.11.2020 - 01.13.2020"
                android:textColor="@color/deep_grey"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>

        <ImageButton
            android:layout_alignParentRight="true"
            android:id="@+id/up_delete"
            android:layout_marginTop="21dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_delete_point" />



</RelativeLayout>